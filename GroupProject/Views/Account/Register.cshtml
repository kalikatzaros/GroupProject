@model GroupProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="register-container">
    <div class="register-form">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
        <div class="register-item">
            <h4 class="title">Create a new account.</h4>
            <hr />
            <div class="validation-container">
                @Html.ValidationSummary(false, "", new { @class = "validation-text" })
            </div>

            <div class="register-item">

               
                    @Html.LabelFor(m => m.Name, new { @class = "" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "", @placeholder = "Enter your Name" })
               
            </div>

            <div class="register-item">

               
                    @Html.LabelFor(m => m.LastName, new { @class = "" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "", @placeholder = "Enter your Last Name" })
               
            </div>

            <div class="register-item">

               
                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "" })
                    @Html.EditorFor(m => m.DateOfBirth, new { @class = "", @placeholder = "Date of Birth" })
               
            </div>

            <div class="register-item">

               
                    @Html.LabelFor(m => m.Email, new { @class = "" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "", @placeholder = "Enter your E-mail" })
               
            </div>
            <div class="register-item">

                    @Html.LabelFor(m => m.Password, new { @class = "" })
                    @Html.PasswordFor(m => m.Password, new { @class = "", @placeholder = "Enter your Password" })

               
            </div>
            <div class="register-item">

               
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "", @placeholder = "Confirm your Password" })
                   
               
            </div>
            <div class="register-item">


               
                <a class="get-image-button" onclick="document.getElementById('ImageFile').click()"><i class="material-icons">camera</i><span>Photo</span></a>

                <input type='file' name="ImageFile" id="ImageFile" accept="image/png, image/jpeg, image/jpg, image/gif" style="display:none">


            </div>
            <div class="last">
                
                    <input type="submit" class="button-default button-primary" value="Register" />
                
            </div>
        </div>
        }
    
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
<style>
   .register-container{
      
       display:flex;
       align-items:center;
       justify-content:center;
       margin-left:35rem;
       margin-top:2rem;
   }

    .container-register {
        height: 90vh;
        width: 90vw;
        display: flex;
        flex-direction:column;
     
      
      
       
    }
    .form-container {
        width: 50%;
        display:flex;
        align-content:center;
        height: 80%;
        gap:1rem;
        background-color: white;
        @*padding-top: 2rem;
        padding-bottom: 4rem;
        padding-left: 4rem;*@
        border-radius: var(--card-border-radius);
       
    }
    .form-horizontal label{
     width:20rem;

    }

    .register-item input{
        background-color:var(--color-light);
        padding:var(--card-padding);
        border-radius:var(--card-border-radius);
    }
    .validation-text {
        color: lightcoral;
        list-style: none;
        margin-bottom: 1rem;
    }

    .button-default {
        display: inline-block;
        padding: var(--button-padding);
        font-weight: 500;
        border-radius: var(--border-radius);
        cursor: pointer;
        transition: all 300ms ease;
        font-size: 1rem;
    }

        .button-default:hover {
            opacity: 0.8;
            text-decoration: none;
        }

    .button-primary {
        background-color: var(--color-primary);
        color: var(--color-white);
    }

        .button-primary:hover {
            opacity: 0.8;
            color: var(--color-gray);
        }

        .register-form{
            display:flex;
            flex-direction:column;
            padding:2rem;
            border-radius:var(--card-border-radius);
            background-color:var(--color-white);
            width:30rem;
            border-bottom:2rem;
        }
        .register-item{
            margin-bottom:1rem;
        }
       .register-item label{
           margin-right:0.5rem;
       }
       .title{
           color:var(--color-primary);
       }
    .last input {
        background-color: var(--color-primary);
    }
    .register-item a{
        color:var(--color-gray);
        cursor:pointer;
        transition:var(--transition);
    }

    .register-item a:hover {
        color: var(--color-primary);
    }
</style>