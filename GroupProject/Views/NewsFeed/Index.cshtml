
@model GroupProject.ViewModels.NewsFeedViewModel
@{
    ViewBag.Title = "NewsFeed";
}

<div class="container">
    
    <h3 class="heading">Recent Wall Posts</h3>
    @foreach (var item in Model.Wallposts)
    {
        <div class="post">

            <div class="post-header">
                <div class="post-user">
                    <img class="post-thumb thumbnail" src="~/img/@item.User.Thumbnail" />
                    <h4 class="post-user-text">
                        @Html.ActionLink(item.User.FullName, "VisitProfile", "Profile", new { id = item.User.Id }, null)
                        @if (item.User.IsAdmin)
                        {

                            <img id="crown" src="~/img/crown.svg">

                        }
                    </h4>
                </div>

               <strong class="">@item.Post.Datetime</strong>
            </div>
            <div class="post-body">
                <p class="post-body-p">@item.Post.Body</p>

                @*<img class="post-body-img thumbnail" src="~/img/@item.Sender.Thumbnail" />*@
            </div>

            @*<div class="post-footer">

                </div>*@
        </div>

    }

    <h3 class="heading">Recent Topic Posts</h3>
    @foreach (var item in Model.TopicPosts)
    {
        <div class="post">
            <div class="post-header">
                <div class="post-user">
                    <img class="post-thumb thumbnail" src="~/img/@item.Sender.Thumbnail" />
                    <h4 class="post-user-text">
                        @Html.ActionLink(item.Sender.FullName, "VisitProfile", "Profile", new { id = item.Sender.Id }, null)
                        @if (item.Sender.IsAdmin)
                        {

                            <img id="crown" src="~/img/crown.svg">

                        }
                    </h4>
                </div>

                <strong class="">@item.Post.Datetime</strong>
            </div>
            <div class="post-body">

                <h4 class="post-body-topic">Topic: @Html.ActionLink(item.Topic.Title, "Index", "TopicPosts", new { id = item.Topic.Id }, null)</h4>

                <p class="post-body-p">@item.Post.Body</p>

                @*<img class="post-body-img thumbnail" src="~/img/@item.Sender.Thumbnail" />*@
            </div>

            @*<div class="post-footer">

                </div>*@
        </div>

    }
</div>

@section scripts{

    }

<style>
    .heading {
        margin-bottom: 2rem;
    }

    .post {
        background-color: white;
        padding-top: 2rem;
        padding-bottom: 4rem;
        padding-left: 4rem;
        padding-right: 4rem;
        border-radius: 1rem;
        box-shadow: 7px 10px 14px -11px rgba(0,0,0,0.1);
        margin-bottom: 4rem;
        width: 100%;
    }


    .post-header {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .post-thumb {
        width: 7rem;
        height: 7rem;
        border-radius: 7rem;
        object-fit:cover;
    }

    .post-user {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .user-text {
        padding-left: 2rem;
    }

    .post-body {
        padding-left: 9rem;
    }

    .post-body-img {
        width: 50%;
        object-fit:cover;
    }

    #crown {
        margin-left: 1rem;
        height: 2.5rem;
        filter: invert(85%) sepia(33%) saturate(6093%) hue-rotate(7deg) brightness(109%) contrast(110%);
    }
</style>