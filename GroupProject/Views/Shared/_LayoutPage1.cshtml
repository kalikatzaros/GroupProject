<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>*@

</head>
<body>
    <div>
        <nav>
            <div class="wrapper">
                <h2 class="logo">
                    Kous Kous <i class="material-icons">chat</i>

                </h2>
                <div class="top-nav-left">
                    <h4>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</h4>
                    <h4>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</h4>


                </div>
            </div>
        </nav>
        <main>
            <div class="wrapper">
               
                    @RenderBody()
               
            </div>
        </main>

    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
            $(document).ready(function () {
                console.log("hey");
                @*$('.sidebar-item').click(function () {
                    const link = $(this);
                    $('.active').removeClass('active');

                    link.addClass('active');
                });*@


            });
    </script>


</body>
</html>
<style>
    :root {
        --color-dark: hsl(252,30%,17%);
        --color-white: hsl(252,30%,100%);
        --color-black: hsl(252,30%,10%);
        --color-light: rgb(222,222,222);
        --color-gray: hsl(252,15%,65%);
        --color-primary: rgb(15,228,212);
        --color-secondary: rgba(15,228,212,0.1);
        --color-success: lightgreen;
        --color-danger: lightcoral;
        --border-radius: 2rem;
        --button-padding: 0.6rem 2rem;
        --card-border-radius: 1rem;
        --search-padding: 0.6rem 1rem;
        --card-padding: 1rem;
        --title-padding: 0.5rem 1rem;
        --sticky-top-left: 5.4rem;
        --sticky-top-right: -18rem;
        --transition: all 300ms ease;
        --color-analogus: rgb(124, 54, 203);
        --color-analogus-secondary: rgba(124, 54, 203,0.1);
        --image-border-radius: 50%;
    }
   *,*::before,*::after{
     margin:0;
     padding:0;
     list-style:none;
     outline:0;
     box-sizing:border-box;
     text-decoration:none;
     border:none;
    }

   body{
       @*font-family:;*@
       color:var(--color-dark);
       background-color:var(--color-light);
       overflow-x:hidden;
   }

   .wrapper{
       width:80%;
       margin:0 auto;
   }
   .profile-photo{
       width:2.7rem;
       object-fit:cover;
       border-radius:50%;
       aspect-ratio:1/1;
       overflow:hidden;
   }

   img{
       display:block;
       width:100%;
   }

   .button-default{
       display:inline-block;
       padding:var(--button-padding);
       font-weight:500;
       border-radius:var(--border-radius);
       cursor:pointer;
       transition:all 300ms ease;
       font-size:0.9rem;
   }

   .button-default:hover{
       opacity:0.8;
   }

   .button-primary{
       background-color:var(--color-primary);
       color:var(--color-white);
   }
   .text-bold{
       font-weight:500;
   }
   .text-muted{
       color:var(--color-gray);
   }

   nav{
       width:100%;
       background-color:var(--color-white);
       padding: 0.7rem 0;
       position:fixed;
       top:0;
       z-index:999;
   }

   nav .wrapper{
       display:flex;
       align-items:center;
       justify-content:space-between;
   }

    .top-nav-left{
        display:flex;
        gap:0.7rem;
        align-items:center;

    }
    .profile-text h4{
        display:flex;
    }
    .profile-text p {
        padding-top:0.3rem;
        font-size:0.9rem;
    }
    #crown {
        height: 1rem;
        filter: invert(85%) sepia(33%) saturate(6093%) hue-rotate(7deg) brightness(109%) contrast(110%);
    }
    main{
        position:relative;
        top:5.4rem;
    }
        main .wrapper {
            display: grid;
            @*grid-template-columns: 18vw auto 20vw;*@
            grid-template-columns: 18vw auto;
            column-gap: 2rem;
            position: relative;
        }

    .main-left{
       height:max-content;
       position:sticky;
       top:var(--sticky-top-left);
    }

    .profile{
        padding:var(--card-padding);
        background-color:var(--color-white);
        border-radius:var(--card-border-radius);
        display:flex;
        align-items:center;
        column-gap:1rem;
        width:100%;
    }

    .sidebar{
margin-top:1rem;
background-color:var(--color-white);
border-radius:var(--card-border-radius);
    }

    .sidebar-item {
        display: flex;
        height: 4rem;
        cursor: pointer;
        transition: all 300ms ease;
        align-items:center;
        gap:1rem;
    }
    .sidebar-item a:link, a:visited {
        color: var(--color-black);
    }
        .sidebar-item i {
            color:var(--color-gray);
            position:relative;
            margin-left:2rem;

        }
    .sidebar-item i:hover {
        color: var(--color-primary);
    }
    .sidebar-item:hover {
        color: var(--color-primary);
        border-left: 0.5rem solid var(--color-primary);

    }
    .sidebar-item h3{
        margin-left:1.5rem;
        font-size:1rem;
    }
    .sidebar .active {
        border-left: 0.5rem solid var(--color-primary);
    }

        .sidebar .active i,
        .sidebar .active h3 {

            color: var(--color-primary);

        }

    .signout a {
        color: var(--color-gray);
        transition: all 300ms ease;
    }
            .signout a:hover {
                color: var(--color-primary);
            }

    .logo {
        font-family: 'Pacifico', cursive;
        @*background: -webkit-linear-gradient(var(--color-primary) 40%, var(--color-analogus));*@
        background: -webkit-linear-gradient(var(--color-analogus)3%,var(--color-primary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .top-nav-left h4 a{
        color:var(--color-gray);
        transition:var(--transition);
    }
    .top-nav-left h4 a:hover {
        color: var(--color-primary);
    }
</style>