<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>

<body>

    <input type="checkbox" id="check" />
    <label for="check">
        <i class="fas fa-bars" id="btn"></i>
        <i class="fas fa-times" id="cancel"></i>
    </label>


    <div class="sidebar">
        <h2>Menu</h2>
        <ul>
            <li><a href="#"><i class="fas fa-home"></i></a>@Html.ActionLink("Homepage", "Index", "Home")</li>
            <li><a href="#"><i class="fas fa-user"></i></a>@Html.ActionLink("Profile", "About", "Home")</li>
            <li><a href="#"><i class="fas fa-envelope"></i></a>@Html.ActionLink("Inbox", "CreateMessage", "Messages")</li>
            <li><a href="#"><i class="fas fa-book"></i></a>@Html.ActionLink("About", "Home", "Home")</li>
            <li><a href="#"><i class="fas fa-address-card"></i></a>@Html.ActionLink("Contact", "Contact", "Home")</li>

        </ul>
    </div>
    @Html.Partial("_LoginPartial")
    
    <div class="container body-content">
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
   

</body>
</html>
